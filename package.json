{
  "name": "domos_poc",
  "version": "0.1.4",
  "author": "Akwa",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "client",
    "server",
    "runner"
  ],
  "scripts": {
    "start:server": "npm run build -w server && node dist/server/index.cjs",
    "start:runner": "npm run start -w runner",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "build": "npm run build --workspaces --if-present"
  },
  "dependencies": {
    "home-assistant-device-sdk": "^0.6.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "concurrently": "^9.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}